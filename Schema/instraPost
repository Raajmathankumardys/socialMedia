const mongoose=require('mongoose')
Schema=mongoose.Schema
var myPost=new Schema({
    userId:{
        type:String,
        require:false,
    },
    image:{
        type:String,
        require:true
    },
    description:{
        type:String,
        require:true
    },
    like:{
        type:String,
        require:false
    },
    tag:{
        type:Array,
        require:false
    },
    location:{
        type:String,
        require:false
    },
})
var post=mongoose.model('post', myPost)
module.exports=post